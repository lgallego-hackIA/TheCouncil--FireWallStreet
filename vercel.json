{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "src/vercel_api.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "data/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/api/$1.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "crons": [
    {
      "path": "/financial-data-collector/all-data",
      "schedule": "30 14 * * *"
    }
  ]
}
