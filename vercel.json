{
  "version": 2,
  "builds": [
    {
      "src": "src/vercel_api.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "data/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/vercel_api.py"
    }
  ],
  "crons": [
    {
      "path": "/financial-data-collector/all-data",
      "schedule": "30 14 * * *"
    }
  ]
}
